{{ 'countdown-section.css' | asset_url | stylesheet_tag }}
<script src="{{ 'countdown-section.js' | asset_url }}" defer></script>

<style>
    #shopify-section-{{ section.id }} {
        --section-padding-top: {{ section.settings.padding_top }}px;
        --section-padding-bottom: {{ section.settings.padding_bottom }}px;
        --shadow-opacity: 0.3;
    }
    .banner-text-wrapper {
        background-color: {{ section.settings.background_color }};
        border: 1px solid {{ section.settings.border_color }};
      }
      .banner-text-wrapper .description {
        color: {{ section.settings.heading_color }};
      }
      .countdown__item .countdown__item--digits {
        background-color: {{ section.settings.digits_background_color }};
        color: {{ section.settings.digits_color }};
      }
      .countdown__item {
        color: {{ section.settings.timer_text_color }};
      }
    
</style>
<div class="custom-image-countdown-banner section-{{ section.id }}-padding">
  {% if section.settings.image_desktop != blank %}
        <div class="image-banner-container">
            <a href="{{ section.settings.img_link }}" class="image-wrapper">
                {% render 'image',
                class: 'image-banner',
                loading: 'eager',
                mobileSrc: section.settings.image_mobile,
                desktopSrc: section.settings.image_desktop
                %}
            </a>
        </div>
    {% endif %}
    {% if section.settings.show_countdown %}
      <div class="countdown-timer banner__content">
        <div class="banner-text-wrapper">
          {% if section.settings.heading != blank %}
            <div class="description">{{ section.settings.heading | strip_html }}</div>
          {% endif %}
          {% if section.settings.date != blank %}
            <countdown-timer class="countdown col-gap-2" data-date="{{ section.settings.date | escape }}"> </countdown-timer>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
{% schema %}
{
  "name": "Countdown section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "header",
        "content": "Countdown"
    },
    {
      "type": "checkbox",
      "id": "show_countdown",
      "default": false,
      "label": "Enable Countdown section."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Heading settings"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Date settings"
    },
    {
      "type": "text",
      "id": "date",
      "label": "End date",
      "info": "Format: mm-dd-yyyy"
    },
    {
      "type": "color",
      "id": "digits_color",
      "label": "Digits text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "digits_background_color",
      "label": "Digits background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "timer_text_color",
      "label": "Text color",
      "default": "#000000",
      "info": " This will apply to the text displaying below the digits. For eg. days, minutes, etc."
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Countdown section"
    }
  ]
}
{% endschema %}
